{
    "private": true,
    "name": "@ec2u/kxta",
    "version": "0.0.0",
    "description": "EC2U Connect Centre Testing Ground",
    "homepage": "https://github.com/ec2u/kxta",
    "repository": "github:ec2u/kxta",
    "bugs": {
        "url": "https://github.com/ec2u/kxta/issues",
        "email": "help@ec2u.cc"
    },
    "license": "Apache-2.0",
    "author": {
        "name": "EC2U Connect Centre",
        "email": "info@ec2u.cc",
        "url": "https://www.ec2u.cc/"
    },
    "workspaces": [
        "code/*"
    ],
    "scripts": {
        "clean": "del dist docs/types node_modules",
        "setup": "npm install",
        "check": "jest",
        "start": "npm run start.client",
        "start.server": "nodemon work/node/server/index.ts",
        "start.client": "vite --open /index.html",
        "build": "npm run build.client",
        "build.server": "del dist && tsc",
        "build.client": "vite build"
    },
    "dependencies": {
        "@metreeca/nest": "^0.0.0",
        "@metreeca/tile": "^0.0.0"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@vitejs/plugin-react-refresh": "^1.3.6",
        "del-cli": "^4.0.0",
        "jest": "^27.5.0",
        "postcss-nesting": "^8.0.0",
        "ts-jest": "^27.1.3",
        "typescript": "^4.3.5",
        "vite": "^2.5.3"
    },
    "jest": {
        "roots": [
            "code"
        ],
        "preset": "ts-jest",
        "globals": {
            "ts-jest": {
                "diagnostics": {
                    "ignoreCodes": [
                        "TS151001"
                    ]
                }
            }
        }
    }
}
